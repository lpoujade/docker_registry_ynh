{
    "name": "Docker template app",
    "id": "docker_registry",
    "description": {
        "en": "Docker registry",
        "fr": "Registre Docker"
    },
    "developer": {
        "name": "lpo"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for docker registry",
                    "fr": "Choisissez un domaine pour docker registry"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for docker registry",
                    "fr": "Choisissez un chemin pour docker registry"
                },
                "example": "/",
                "default": "/"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
